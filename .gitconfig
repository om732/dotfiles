[includeIf "gitdir:~/Work/project/work"]
    path = ~/.gitconfig-work

[includeIf "gitdir:~/Work/project/private"]
    path = ~/.gitconfig-private

[user]
    name = om732
    email = hal.net.ver.g@gmail.com

[push]
    default = current

[core]
    editor = nvim
    compression = 0
    precomposeunicode = true
    mergeoptions = --no-edit
	excludesfile = ~/.gitignore_global

[url "https://"]
    insteadOf = git://

[merge]
    ff = false

[alias]
    s  = status
    st = status
    ss = status -s

    a  = add
    ad = add
    c  = commit
    cm = commit -m

    b  = branch -a
    br = branch -r

    co = checkout
    cb = checkout -b
    develop = checkout develop
    master  = checkout master

    d  = diff

    l  = log

    p  = push
[pull]
    ff = only
[ghq]
    root = ~/Work/project
